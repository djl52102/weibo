@charset "UTF-8";
body,h1,h2,h3,h4,h5,h6,ul,ol,p,form,dl,dt,dd{
    margin:0;
    padding:0
}
body{
    background:url(../img/weibo_bg.jpg);
    font-family:Arial,Helvetica,sans-serif;
}
ul,ol{
    list-style:none;
}
/*自定义UI*/
.ui-button{
    height:35px !important;
    background:url(../img/button.png) !important;
    border:none !important;
    color:#fff !important;
}
.ui-button:hover{
    background:url(../img/button_hover.png) !important;
}
#header{
    width:100%;
    height:42px;
    background:url(../img/header_bg.png);
    position:fixed;
    top:0
}
#header .header_main{
    width:960px;
    height:42px;
    margin:0 auto;
}
#header .logo{
    width:86px;
    height:42px;
    background:url(../img/weibo_logo.png) no-repeat center;
    text-indent:-9999px;
    cursor:pointer;
    float:left;
}
#header ul li{
    float:left;
    height:42px;
    line-height:42px;
}
#header ul li a{
    padding:0 10px;
    display:block;
    font-size:14px;
    color:#fff;
    text-decoration:none;
}
#header ul li a:hover,#header ul li a.selected{
    background:#333;
}
#header .nav{
    float:left;
    margin:0 0 0 30px;
}
#header .search{
    float:right;
    padding:8px 30px 0 0;
    position:relative;
}
#header .person{
    float:right;
    font-size:13px;
    color:#fff;
}
#header .person a{
    padding:0 10px;
}
#header .app{
    padding:0 12px;
    position:relative;
    cursor:pointer;
}
#header dl.list{
    display:none;
    width:100px;
    background:#fff;
    border:1px solid #666;
    border-top:none;
    position:absolute;
    top:42px;
    left:-51px;
}
#header dl.list a{
    font-size:12px;
    height:30px;
    line-height:30px;
    color:#444;
}
#header dl.list a:hover{
    background:#eee;
}
#header dl.list a.line{
    border-top:1px solid #eee;
}
#header .search input{
    padding:5px;
    color:#999;
    border:none;
    background:#fff;
    border-radius:4px;
    width:200px;
    height:16px;
}
#header .search a{
    width:17px;
    height:18px;
    display:block;
    background:url(../img/search_btn.png) no-repeat;
    position:absolute;
    top:13px;
    right:38px;
}
#error{
    background:url(../img/error.png) no-repeat 20px center;
    font-size:14px;
    font-weight:bold;
    color:red;
    line-height:20px;
    text-indent:35px;
}
#loading{
    background:url(../img/loading.gif) no-repeat 20px 65%;
    font-size:14px;
    font-weight:bold;
    color:#666;
    line-height:18px;
    text-indent:40px;
}
#footer{
    clear:both;
    font-size:13px;
    width:960px;
    height:40px;
    line-height:40px;
    margin:0 auto;
    color:#333;
}
#footer .footer_left{
    float:left;
}
#footer .footer_right{
    float:right;
}