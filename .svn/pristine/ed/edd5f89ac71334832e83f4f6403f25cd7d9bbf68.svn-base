@charset "UTF-8";
#main{
    margin:58px auto 0 auto;
    background:#fff;
    width:960px;
    min-height:800px;
    box-shadow:0 0 5px #ccc;
}
#main .main_left{
    width:169px;
    padding:0 10px;
    min-height:800px;
    background:#f7f7f7;
    float:left;
}
#main .main_right{
    width:730px;
    min-height:800px;
    padding:0 20px;
    float:right;
    background:#fff;
    border-left:1px solid #ddd;
}
#main .main_left ul{
    text-align:center;
    padding:20px 0 0 0;
    font-size:13px;
}
#main .main_left ul li{
    height:30px;
    line-height:30px;
    margin:0 0 2px 0;
}
#main .main_left ul li a{
    display:block;
    color:#666;
    text-decoration:none;
}
#main .main_left ul li a:hover,#main .main_left ul li a.selected{
    color:#eee;
    background:#333;
}
#main .main_right h2{
    font-size:14px;
    color:#333;
    padding:10px 0 0 0;
    height:35px;
    line-height:35px;
    border-bottom:1px solid #ddd;
}
#main .main_right dl{
    font-size:13px;
    padding:5px 0 0 0;
    color:#333;
}
#main .main_right dl dd{
    padding:5px 0;
}
#main .main_right dl dd span{
    vertical-align:76px;
}
#main .main_right dl dd input.text {
    width:300px;
    height:20px;
    padding:5px;
    border-radius:3px;
    border:1px solid #ccc;
    background:#fff;
    font-size:13px;
    color:#333;
}
#main .main_right dl dd textarea {
    width:300px;
    height:80px;
    padding:5px;
    border-radius:3px;
    border:1px solid #ccc;
    background:#fff;
    color:#333;
    font-size:13px;
    resize:none;
}
#main .main_right dl dd input.submit{
    width:80px;
    margin:0 0 0 65px;
    cursor:pointer;
}